<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VseYslugi">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="353dp"
        android:layout_height="682dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/zal"
                android:onClick="zal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/zal"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:text="Записаться в зал"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/trener"
                android:onClick="trener"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/trener"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Записаться к тренеру"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/eda"
                android:onClick="eda"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/eda"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:text="Питание"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/inventar"
                android:onClick="inventar"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/sportinventar"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Спортивный инвентарь"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backk"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.99" />
</androidx.constraintlayout.widget.ConstraintLayout>



